{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "checkJs": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2020"],
    // "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "@Page/*": ["./pages/*"],
      "@Component/*": ["./components/*"],
      "@Hook/*": ["./hooks/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
